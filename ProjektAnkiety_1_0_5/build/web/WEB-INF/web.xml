<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainPage</servlet-name>
        <servlet-class>pl.ankiety.MainPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PollsWizard</servlet-name>
        <servlet-class>pl.ankiety.PollsWizard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUsers</servlet-name>
        <servlet-class>pl.ankiety.AddUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PollsView</servlet-name>
        <servlet-class>pl.ankiety.PollsView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersView</servlet-name>
        <servlet-class>pl.ankiety.UsersView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PoolsManagementPage</servlet-name>
        <servlet-class>pl.ankiety.PollsManagementPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserView</servlet-name>
        <servlet-class>pl.ankiety.UserView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Poll_sResults</servlet-name>
        <servlet-class>pl.ankiety.Poll_sResults</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainPage</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PollsWizard</servlet-name>
        <url-pattern>/PollsWizard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUsers</servlet-name>
        <url-pattern>/AddUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PollsView</servlet-name>
        <url-pattern>/PollsView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersView</servlet-name>
        <url-pattern>/UsersView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PoolsManagementPage</servlet-name>
        <url-pattern>/PollsView/PoolsManagementPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserView</servlet-name>
        <url-pattern>/UsersView/UserView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Poll_sResults</servlet-name>
        <url-pattern>/PollsView/Poll_sResults</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
